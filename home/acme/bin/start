#!/bin/busybox sh

# Exit if an error occurs or an unset variable is referenced.
set -euo pipefail

# Update our ACME account information, in case the `ACME_ACCOUNT_EMAIL` secret's
# value was changed.
dehydrated --account

# Delete any registration info backup files generated by the above command.
rm -f ~/dehydrated/accounts/*/registration_info-*.json

# Run our TLS certificate issuing script.
~/bin/issue
